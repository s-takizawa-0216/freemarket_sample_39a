            %li.text
              .user-mypage__link
                %figure.figure-size
                  = image_tag("/images/mercari_icon.png" ,size:"48x48" , alt: "mercari-log")
                .user-mypage__body
                  .user-mypage__text  sample-news5
            %li.text
              .user-mypage__link1  一覧を見る
          %ul.id
            = image_tag("/images/logo-gray.svg" ,size:"100x100" , alt: "mercari-log" , class: "mercari-log16")
