%head
  %script{ src: "https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"}
%body
= render partial: "shared/header-login"
.bread-crumbs
  %ul
    %li
      - breadcrumb :mypage
      = breadcrumbs separator: " &rsaquo; "
.main-content
  %main.r-content-clearfix
    .rightcontent1
      %section.rightcontent__mypage
        %figure.rightcontent__mypage2
          =image_tag("/images/member_photo_noimage_thumb.png" ,class: "rightcontent__mypage--icon" , size: "60x60" , alt: "user")
        %h2.rightcontent__mypage--name
          = current_user.name
        .rightcontent__mypagenumber
          .rightcontent__mypage--evaluation  評価
          .rightcontent__mypage--exhibit     出品数
      %section.user-mypage
        %ul.tab
          %li.active お知らせ
          %li やる事リスト
        .area
          %ul.show
            %li.text
              .user-mypage__link
                %figure.figure-size
                  = image_tag("/images/mercari_icon.png" ,size:"48x48" , alt: "mercari-log")
                .user-mypage__body
                  .user-mypage__text  sample-news1
            %li.text
              .user-mypage__link
                %figure.figure-size
                  = image_tag("/images/mercari_icon.png" ,size:"48x48" , alt: "mercari-log")
